#!/bin/bash

APPS=(
	alfred
	google-chrome
	dropbox
	sourcetree
	sublime-text3
	sequel-pro
	virtualbox
	vagrant
	poedit
	flux
	spotify
	transmission
	atext
	slack
	firefox
	bartender
)

echo "==> Tapping caskroom/versions"
brew tap caskroom/versions

echo "==> Upgrading homebrew-cask"
brew upgrade brew-cask

echo "==> Installing gui apps"
for APP in ${APPS[@]}; do
	brew cask install "$APP"
done

# Cleanup outdated things
echo "==> Cleaning up homebrew-cask"
brew cask cleanup
