#!/bin/bash

echo "Updating homebrew"
brew update

echo "Upgrading installed formulae"
brew upgrade

# Install homebrew cask for gui apps
brew install caskroom/cask/brew-cask

# Install useful things
brew install tree
brew install z
brew install node
brew install lftp
brew install git
brew install gpg
brew install gpg-agent
brew install pass

# Tap and install mpv
brew tap mpv-player/mpv
brew install mpv
brew linkapps mpv

# Install php
brew tap homebrew/dupes && brew tap homebrew/versions && brew tap homebrew/homebrew-php
brew install php56

# Cleanup outdated things
echo "Cleaning up homebrew"
brew cleanup
